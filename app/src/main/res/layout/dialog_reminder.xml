<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tvReminderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng đảm bảo bạn đã thêm email của vào cuối nội dung phản hồi để chúng tôi có thể phản hồi bạn sớm nhất có thể."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnCloseDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đồng ý"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_close_background"
        android:padding="4dp"/>
</LinearLayout>
