<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">



    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:src="@drawable/anhwelcome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Register Form -->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="375dp"
        android:layout_height="542dp"
        android:layout_margin="24dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/bgImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Thông Tin Ứng Dụng"
            android:textColor="#6200EE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guide_textt"
            android:layout_width="346dp"
            android:layout_height="413dp"
            android:layout_centerInParent="true"
            android:text="  Đây là ứng dụng Quản Lý Bán Coffee do \n  nhóm sinh viên
trường Đại Học Công \n  Nghệ Đông Á nghiên cứu và phát triển.\n\n  Nhóm gồm 5 thành viên :
\n  Nguyễn Huy Hiếu - Msv:20224096 \n  Đặng Việt Anh - Msv:20224066   \n  Nguyễn Văn Bằng - Msv:20223965
\n  Quách Việt Hoàng - Msv:20223958     \n  Dương Đức Trung Nguyên -Msv:20224067
\n
\n  Xin chân thành cảm ơn các bạn đã tin \n  tưởng và sử dụng ứng dụng của chúng \n  tôi . Chúc các bạn một ngày tốt lành.. "
            android:textColor="@color/black"
            android:textSize="18sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/img_thongtin_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />


</androidx.constraintlayout.widget.ConstraintLayout>