<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">



    <!-- Background Image -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:src="@drawable/anhwelcome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Register Form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/bgImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261">

        <!-- Title -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Liên Hệ Nhà Phát Triển"
            android:textColor="#6200EE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guide_textt"
            android:layout_width="wrap_content"
            android:layout_height="283dp"
            android:layout_centerInParent="true"
            android:text="  Đây là ứng dụng Quản Lý Bán Coffee do \n  nhóm sinh viên
trường Đại Học Công \n  Nghệ Đông Á nghiên cứu và phát triển.\n
\n  Liên Hệ : Zalo/SDT: 0329610134\n
 Email: nghuyhieu3010@gmail.com\n
 DC: Trường đại học công nghệ Đông Á
\n
\n   Xin chân thành cảm ơn các bạn đã tin \n   tưởng và sử dụng ứng dụng của chúng \n   tôi . Chúc các bạn một ngày tốt lành.. "
            android:textColor="@color/black"
            android:textSize="18sp" />





        <Button
            android:id="@+id/btnphanhoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#03DAC5"
            android:text="Phản Hồi"
            android:textColor="#000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!-- Quay lại Button 1 -->
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="169dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/facebook" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/youtube" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/instagram" />

            <!-- Quay lại Button 2 -->
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_lienhe_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />




</androidx.constraintlayout.widget.ConstraintLayout>